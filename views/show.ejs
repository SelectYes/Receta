<%- include('partials/header') %>

<div class="container center-align">
    <div class="container teal lighten-5">
        <h1 class=""><%= recipe.recipeName %></h1>
        <h3>Author: <%= recipe.author %></h3>
        <p><%= recipe.created.toDateString() %></p>
        <img src="<%= recipe.imageURL %>" alt="">
        <p class="flow-text"><%= recipe.body %></p>
        <a class="btn waves-effect waves-light" href="/recipes">Back</a>
        <a class="btn waves-effect waves-light" href="/recipes/<%= recipe._id %>/edit">Edit</a>

        <form id="inline-form" action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn waves-effect waves-light">Delete</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>